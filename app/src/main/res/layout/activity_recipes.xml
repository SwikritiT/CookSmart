<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/viewBg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/recipe_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:background="@color/viewBg"
        app:cardCornerRadius="0dp"
        >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:weightSum="100">


            <ImageView
                android:id="@+id/recipes_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="2dp"
                android:layout_margin="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"


                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="@dimen/categories_title_padding"
                android:paddingRight="@dimen/categories_title_padding"

                android:textColor="@color/categories_title"
                android:textSize="18sp"

                android:clickable="true"
                android:focusable="true"

                />

           <TextView
               android:id="@+id/recipe_ingredients"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
               android:layout_marginBottom="5dp"
               android:paddingLeft="@dimen/categories_title_padding"
               android:paddingRight="@dimen/categories_title_padding"

               android:textColor="@color/categories_title"
               android:textSize="18sp"
               android:clickable="true"
               android:focusable="true"
               />


           <TextView
               android:id="@+id/recipe_instructions"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
               android:layout_marginBottom="5dp"
               android:paddingLeft="@dimen/categories_title_padding"
               android:paddingRight="@dimen/categories_title_padding"

               android:textColor="@color/categories_title"
               android:textSize="18sp"
               android:clickable="true"
               android:focusable="true"
               />

       </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>