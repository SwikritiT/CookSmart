<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:drawable="@color/lightgray" >
    <shape
        android:shape="oval"
        android:thickness="50dp">
        <solid android:color="@color/lightgray">

        </solid>

        <corners
            android:bottomLeftRadius="20dp"
            android:bottomRightRadius="20dp"
            android:topLeftRadius="20dp"
            android:topRightRadius="20dp"/>

        <stroke android:color="@color/viewBg"
            android:width="1dp" />
    </shape>
</item>

    <item android:state_focused="true" android:drawable="@color/colorPrimaryLight" >

        <shape
            android:shape="oval"
            android:thickness="50dp">
            <solid android:color="@color/lightgray">

            </solid>

            <corners
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>

            <stroke android:color="@color/viewBg"
                android:width="1dp" />
        </shape>
    </item>
<item android:drawable="@color/viewBg">
    <shape
        android:shape="oval"
        android:thickness="50dp">
        <corners
            android:bottomLeftRadius="20dp"
            android:bottomRightRadius="20dp"
            android:topLeftRadius="20dp"
            android:topRightRadius="20dp"/>

        <stroke android:color="@color/viewBg"
            android:width="1dp" />
    </shape>



</item>
</selector>